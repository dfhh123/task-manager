# Development Dockerfile с hot reload
FROM node:20-alpine AS development

WORKDIR /app

# Копируем package files
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем исходный код
COPY . .

# Expose порт для Vite
EXPOSE 3000

# Запуск в dev режиме
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

